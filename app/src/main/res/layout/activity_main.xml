<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uninorte.proyectosmf.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="CALIFICACIONES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Proyecto 1"
                android:layout_width="189dp"
                android:layout_height="55dp"
                android:id="@+id/tv1"
                android:layout_weight="1"
                android:textSize="36sp"
                android:onClick="onclickP"
                android:tag="p1"
                android:textColor="?attr/colorControlNormal" />

            <TextView
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv2"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Proyecto 2"
                android:layout_width="189dp"
                android:layout_height="55dp"
                android:id="@+id/tv3"
                android:layout_weight="1"
                android:textSize="36sp"
                android:onClick="onclickP"
                android:tag="p2"
                android:textColor="?attr/colorControlNormal" />

            <TextView
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv4"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Proyecto 3"
                android:layout_width="189dp"
                android:layout_height="55dp"
                android:id="@+id/tv5"
                android:layout_weight="1"
                android:textSize="36sp"
                android:onClick="onclickP"
                android:tag="p3"
                android:textColor="?attr/colorControlNormal" />

            <TextView
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv6"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Proyecto 4"
                android:layout_width="189dp"
                android:layout_height="55dp"
                android:id="@+id/tv7"
                android:layout_weight="1"
                android:textSize="36sp"
                android:onClick="onclickP"
                android:tag="p4"
                android:textColor="?attr/colorControlNormal" />

            <TextView
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv8"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
